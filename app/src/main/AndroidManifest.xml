<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.aaronmeaney.solvecubed">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:resizeableActivity="false"
        android:screenOrientation="portrait"
        android:theme="@style/StandardTheme">
        <activity
            android:name="ie.aaronmeaney.solvecubed.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ie.aaronmeaney.solvecubed.ColorCalibratorCameraActivity"
            android:label="@string/color_picker_activity_title"
            android:theme="@style/StandardTheme.AppCompat" />
        <activity
            android:name="ie.aaronmeaney.solvecubed.PrefsActivity" />
    </application>

</manifest>