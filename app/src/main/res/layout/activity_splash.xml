<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aaronmeaney.ie.solvecubed.SplashActivity">

    <TextView
        android:id="@+id/splash_subtitle_background"
        style="@style/TextSubtitleShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/app_subtitle"
        />

    <TextView
        android:id="@+id/splash_subtitle"
        style="@style/TextSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2dp"
        android:layout_alignTop="@id/splash_subtitle_background"
        android:text="@string/app_subtitle"
        />

    <TextView
        android:id="@+id/splash_title_background"
        style="@style/TextLogoFontShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/splash_subtitle_background"
        android:text="@string/app_name_superscript"
        />

    <TextView
        android:id="@+id/splash_title"
        style="@style/TextLogoFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2dp"
        android:layout_alignTop="@id/splash_title_background"
        android:text="@string/app_name_superscript"
        />

    <ProgressBar
        android:id="@+id/splash_progressbar"
        style="@style/ProgressBarStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
