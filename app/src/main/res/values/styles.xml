<resources>
    <!-- Splash Screen theme -->
    <style name="SplashTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!-- Logo on the Splash Screen -->
    <style name="TextLogoFont">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/text_and_icons</item>
    </style>
    <style name="TextLogoFontShadow">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Subtitle on the Splash Screen -->
    <style name="TextSubtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_and_icons</item>
    </style>
    <style name="TextSubtitleShadow">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Standard Text -->
    <style name="TextStandard">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_and_icons</item>
    </style>
    <style name="TextStandardShadow">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Standard Progress Bar -->
    <style name="ProgressBarStandard">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/primary_light</item>
    </style>

    <!-- Main Menu Button -->
    <style name="ButtonMainMenu">
        <item name="android:text">UNTITLED_BUTTON</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_and_icons</item>
        <item name="android:drawableStart">@drawable/ic_priority_high_24dp</item>
        <item name="android:drawableTint">@color/text_and_icons</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/btn_main_menu_ripple</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Styles for overlay camera icons -->
    <style name="CameraOverlayIcon">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:maxWidth">50dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="CameraOverlayIcon.Small">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxHeight">25dp</item>
        <item name="android:maxWidth">25dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Style for the icons in the color palette activity -->
    <!-- TODO: Fix the lack of elevation here -->
    <style name="ColorPaletteConfirmationIcon" parent="CameraOverlayIcon">
        <item name="elevation">12dp</item>
    </style>

    <!-- Standard Theme for other app menus -->
    <style name="StandardTheme" parent="android:Theme.Material.Light">
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:actionBarItemBackground">@color/primary</item>
        <item name="android:actionBarStyle">@style/StandardTheme.ActionBar</item>
        <item name="android:buttonTint">@color/accent</item>
    </style>

    <style name="StandardTheme.ActionBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:titleTextStyle">@style/StandardTheme.ActionBar.Text</item>
    </style>

    <style name="StandardTheme.ActionBar.Text" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/text_and_icons</item>
    </style>

    <style name="StandardTheme.Button" parent="@android:style/Widget.Material.Button">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/text_and_icons</item>
    </style>

    <!-- Standard Theme (app compat) -->
    <style name="StandardTheme.AppCompat" parent="@style/Theme.AppCompat.Light">
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="actionBarItemBackground">@color/primary</item>
        <item name="actionBarStyle">@style/StandardTheme.AppCompat.ActionBar</item>
        <item name="buttonTint">@color/accent</item>
    </style>

    <style name="StandardTheme.AppCompat.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/primary</item>
        <item name="titleTextStyle">@style/StandardTheme.ActionBar.Text</item>
    </style>

    <style name="StandardTheme.AppCompat.ActionBar.Text" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_and_icons</item>
    </style>

    <style name="StandardTheme.AppCompat.FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="StandardTheme.AppCompat.FloatingActionButton.Small" parent="StandardTheme.AppCompat.FloatingActionButton">
        <item name="fabSize">mini</item>
    </style>
</resources>
