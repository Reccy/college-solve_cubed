<resources>
    <!-- Splash Screen theme -->
    <style name="SplashTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Logo on the Splash Screen -->
    <style name="TextLogoFont">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
    </style>
    <style name="TextLogoFontShadow">
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <!-- Subtitle on the Splash Screen -->
    <style name="TextSubtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
    </style>
    <style name="TextSubtitleShadow">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <!-- Standard Text -->
    <style name="TextStandard">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
    </style>
    <style name="TextStandardShadow">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <!-- Standard Progress Bar -->
    <style name="ProgressBarStandard">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/colorPrimaryLight</item>
    </style>

    <!-- Main Menu Button -->
    <style name="ButtonMainMenu">
        <item name="android:text">UNTITLED_BUTTON</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
        <item name="android:drawableStart">@drawable/ic_priority_high</item>
        <item name="android:drawableTint">@color/colorTextAndIcons</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/button_main_menu_ripple</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Standard Theme for other app menus -->
    <style name="StandardTheme" parent="android:Theme.Material.Light">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:actionBarItemBackground">@color/colorPrimary</item>
        <item name="android:actionBarStyle">@style/StandardTheme.ActionBarStandardTheme</item>
    </style>

    <style name="StandardTheme.ActionBarStandardTheme" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/StandardTheme.ActionBarStandardTheme.Text</item>
    </style>

    <style name="StandardTheme.ActionBarStandardTheme.Text" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/colorTextAndIcons</item>
    </style>
</resources>
